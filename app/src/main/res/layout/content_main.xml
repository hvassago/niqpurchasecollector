<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="0dp"
        tools:showIn="@layout/app_bar_main">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Enviar factura de compra a NIQ"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayoutCamera"
            android:layout_width="169dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/rounded_background"
            android:elevation="6dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="16dp"
                app:srcCompat="@drawable/camara_dslr"
                android:clickable="false"/>

            <TextView
                android:id="@+id/textViewCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton1"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar desde cámara"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:clickable="false"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutGallery"
            android:layout_width="169dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_background"
            android:elevation="6dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="16dp"
                app:srcCompat="@drawable/galeria"
                android:clickable="false" />

            <TextView
                android:id="@+id/textViewGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton2"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar desde galería"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutVoice"
            android:layout_width="169dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_background"
            android:elevation="6dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutCamera">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="16dp"
                app:srcCompat="@drawable/mensaje_de_voz"
                android:clickable="false" />

            <TextView
                android:id="@+id/textViewVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton3"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar nota de voz"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutOther"
            android:layout_width="169dp"
            android:layout_height="200dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_background"
            android:elevation="6dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutGallery">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="16dp"
                app:srcCompat="@drawable/tipo_de_archivo"
                android:clickable="false" />

            <TextView
                android:id="@+id/textViewOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton4"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar otro documento"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:clickable="false" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/nav_host_fragment_content_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/progressContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBarUploadFooter"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="0"
            app:layout_constraintEnd_toStartOf="@+id/textViewProgressPercentageFooter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewFilesStatusFooter"/>

        <TextView
            android:id="@+id/textViewProgressPercentageFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progressBarUploadFooter"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarUploadFooter"/>

        <TextView
            android:id="@+id/textViewFilesStatusFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Esperando envío..."
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarUploadFooter"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>