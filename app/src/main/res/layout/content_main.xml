<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="0dp"
        tools:showIn="@layout/app_bar_main">

        <fragment
            android:id="@+id/nav_host_fragment_content_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Enviar factura de compra"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayoutCamera"
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:background="#D4D5D5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="351dp"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:backgroundTint="#D5D6D6"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/camara_dslr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton1"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar desde cámara"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutGallery"
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:background="#D4D5D5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="351dp"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:backgroundTint="#D5D6D6"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/factura" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton2"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar desde galería"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutVoice"
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="#D4D5D5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutCamera">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="351dp"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:backgroundTint="#D5D6D6"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mensaje_de_voz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton3"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar nota de voz"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutOther"
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="16dp"
            android:background="#D4D5D5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutGallery">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="351dp"
                android:layout_height="124dp"
                android:adjustViewBounds="false"
                android:backgroundTint="#D5D6D6"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tipo_de_archivo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButton4"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enviar otro documento"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>